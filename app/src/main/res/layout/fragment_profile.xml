<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/profile_page_padding"
    android:paddingBottom="@dimen/profile_page_padding_bottom"
    android:paddingLeft="@dimen/profile_page_padding"
    android:paddingRight="@dimen/profile_page_padding"
    android:orientation="vertical"
    android:background="@color/profile_bg"
    tools:context=".fragments.Profile">

    <View style="@style/ViewDivider"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/profile_name"
            android:textSize="@dimen/profile_key_size"
            android:gravity="center" />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_name_text"
            android:paddingLeft="@dimen/profile_vertical_padding_text"
            android:textSize="@dimen/profile_value_size"
            android:gravity="center"/>
    </RelativeLayout>


    <View style="@style/ViewDivider"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/profile_email"
            android:textSize="@dimen/profile_key_size"
            android:gravity="center" />
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_email_text"
            android:paddingLeft="@dimen/profile_vertical_padding_text"
            android:textSize="@dimen/profile_value_size"
            android:gravity="center"/>
    </RelativeLayout>

    <View style="@style/ViewDivider"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/profile_status"
            android:textSize="@dimen/profile_key_size"
            android:gravity="center" />
        <TextView
            android:id="@+id/profile_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_status_text"
            android:paddingLeft="@dimen/profile_vertical_padding_text"
            android:textSize="@dimen/profile_value_size"
            android:gravity="center" />
    </RelativeLayout>

    <View style="@style/ViewDivider"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/profile_sender_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/profile_sender_id"
            android:textSize="@dimen/profile_key_size"
            android:gravity="center" />
        <TextView
            android:id="@+id/profile_sender_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_sender_id_text"
            android:paddingLeft="@dimen/profile_vertical_padding_text"
            android:textSize="@dimen/profile_value_size"
            android:gravity="center" />
    </RelativeLayout>

    <View
        style="@style/ViewDivider"
        android:visibility="gone"/>

</LinearLayout>