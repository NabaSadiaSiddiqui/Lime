<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nabass.lime.widgets.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="@dimen/action_bar_icon_size"
        android:layout_height="@dimen/action_bar_icon_size"
        android:paddingLeft="@dimen/action_bar_icon_padding_left"
        android:paddingBottom="@dimen/action_bar_icon_padding"
        android:paddingTop="@dimen/action_bar_icon_padding"
        android:paddingRight="@dimen/action_bar_icon_padding"
        android:onClick="showProfile"
        android:src="@drawable/olaf"/>

    <TextView
        android:id="@+id/identifier"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/profile_img"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"/>

</RelativeLayout>