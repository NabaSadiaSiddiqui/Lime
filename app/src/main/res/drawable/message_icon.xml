<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:top="@dimen/empty_view_speech_bubble_triangle_offset">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@android:color/holo_red_dark" />
            </shape>
        </rotate>
    </item>
    <item android:left="@dimen/empty_view_speech_bubble_rectangle_offset">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/holo_red_dark" />
            <corners android:radius="@dimen/empty_view_speech_bubble_radius" />
        </shape>
    </item>
</layer-list>